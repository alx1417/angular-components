{
    "extends": "../tslint.json",
    "rules": {
        "max-line-length": false,
        "member-access": [true, "no-public"],
        "no-inferrable-types": false,
        "radix": false,
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "cmp",
            "element",
            "app",
            "kebab-case"
        ],
        "component-class-suffix": [
          true,
          "View",
          "Component"
        ],
        "trailing-comma": [
          true,
          {
            "multiline": {
              "objects": "always",
              "arrays": "always",
              "functions": "always",
              "typeLiterals": "ignore"
            },
            "singleline": "never"
          }
        ]
    }
}
